<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d61f64">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_margin="20dp">


        <TextView
            android:text="Conozcamonos mejor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#ffffff" />

        <TextView
            android:text="Para ofrecerte servicios segun tus gustos, necesitamos permisos para ver tu info telefono, calendario, contactos, localizacion y SMS. Los vamos a usar para conocerte un poco mejor y entender tu red social.\n\nTus datos estan super seguros y obviamente no vamos a contactar a tus amigos ni a guardar sus datos. "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_perm_intro_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_round"
            android:textColor="#FFFFFF"
            android:text="Listo"/>

        <Button
            android:id="@+id/btn_perm_intro_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round"
            android:textColor="#FFFFFF"
            android:text="Mas tarde"/>

    </LinearLayout>

</RelativeLayout>